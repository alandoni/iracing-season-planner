{
  "name": "iracing-season-planner",
  "version": "1.0.0",
  "description": "An app to help to plan the season on iRacing",
  "main": "index.ts",
  "scripts": {
    "build": "tsc --build --verbose && tsc-alias",
    "postbuild": "cp package.json ../build/backend/package.json && cp .env ../build/backend || : && cd ../build/backend && yarn install --prod",
    "start": "ts-node-dev -r tsconfig-paths/register --project ./tsconfig.json ./src/index.ts --diagnostics --ignore-watch node_modules",
    "test": "jest"
  },
  "author": "Alan Donizete Quintiliano",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.11",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.14.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^3.1.4",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.18.1",
    "cors": "^2.8.5",
    "dotenv-cli": "^7.3.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "js-sha256": "^0.11.0",
    "winston": "^3.8.2"
  }
}
