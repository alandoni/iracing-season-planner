{
  "extends": "../tsconfig-frontend.json",
  "compilerOptions": {
    /* Linting */
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "../",
    "paths": {
      "src/*": ["./src/*"],
      "components/*": ["./src/view/components/*"],
      "pages/*": ["./src/view/pages/*"],
      "i18n/*": ["./src/view/i18n/*"],
      "assets/*": ["./src/assets/*"]
    }
  },
  "include": ["./src"],
  "ts-node": {
    "files": true
  }
}
